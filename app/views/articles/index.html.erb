<h1>Articles Listing Page</h1>
<hr>
<table>
    <thead>
        <tr>
            <th><u>   Title   </u></th>
            <th>|</th>
            <th><u>   Description   </u></th>
            <th>|</th>
            <th><u>   Created At   </u></th>
            <th>|</th>
            <th colspan="3"><u>   Actions   </u></th>
            <th>|</th>
        </tr>
    </thead>    
    <tbody>
        <% @articles.each do |article|   %>
        <tr>
            <td><%= article.title %> </td>
            <td><strong>|</strong></td>
            <td><%= article.description %> </td>
            <td><strong>|</strong></td>
            <td><%= article.created_at %></td>
            <td><strong>|</strong></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= button_to 'Delete', article_path(article), method: :delete, onclick: "return confirm('u sure?')" %></td>
            <td><strong>|</strong></td>
        </tr>
        <% end %>
    </tbody>
    <h3><%= link_to 'Create New Article', new_article_path(@article) %></h3>
    <h3><%= link_to 'Go back to home page', root_path() %></h3>
</table>